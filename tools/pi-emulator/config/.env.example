# =============================================================================
# Pi Emulator - Environment Variables Example
# =============================================================================
# Copy to .env and customize
# =============================================================================

# SSH Configuration
SSH_PORT=2222
SSH_USER=pi
SSH_PASSWORD=raspberry
# SSH_KEY_PATH=~/.ssh/id_rsa  # Recommended for production

# Container Configuration
CONTAINER_NAME=pi-emulator-test
HOSTNAME=raspberrypi
TIMEZONE=Europe/Paris

# Port Mappings
HTTP_PORT=8080
HTTPS_PORT=8443
POSTGRES_PORT=5432
KONG_PORT=8000
MINIO_PORT=9000
STUDIO_PORT=8001
APP_PORT=3000

# Docker Configuration
DOCKER_NETWORK=pi-emulator-network
HOME_VOLUME=pi-emulator-home
DOCKER_VOLUME=pi-emulator-docker

# Supabase Configuration (if installed)
POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password
POSTGRES_DB=postgres
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
JWT_SECRET=your-jwt-secret-here

# Admin Panel Configuration
ADMIN_PANEL_PORT=4000
ADMIN_PANEL_HOST=0.0.0.0

# Testing Configuration
ENABLE_DEBUG=false
LOG_LEVEL=info

