# =============================================================================
# PI5 Control Center - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# Supabase Configuration
# Get these values from your Supabase instance
SUPABASE_URL=http://pi5.local:8001
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Server Configuration
PORT=4000
NODE_ENV=development

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET=change-this-in-production

# SQL Scripts Source
# Use 'local' for development (reads from tools/admin-panel/supabase/*.sql)
# Use 'github' for production (fetches from GitHub repo)
SQL_SOURCE=local
GITHUB_SQL_REPO=https://github.com/iamaketechnology/pi5-setup
GITHUB_SQL_BRANCH=main
GITHUB_SQL_PATH=tools/admin-panel/supabase
