{
  "name": "pi5-control-center",
  "version": "3.4.0",
  "description": "Complete web dashboard to manage Raspberry Pi 5 - Modular ES6 architecture with system monitoring and script execution",
  "main": "server.js",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "docker:build": "docker build -t pi5-admin-panel:2.0.0 .",
