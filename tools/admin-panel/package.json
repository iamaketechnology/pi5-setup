    "docker:logs": "docker logs -f pi5-admin-panel"
  },
  "keywords": [
    "raspberry-pi",
    "admin-panel",
    "control-center",
    "dashboard",
    "monitoring",
    "ssh",
    "docker",
    "deployment",
    "system-stats",
    "web-ui"
  ],
  "author": "PI5-SETUP Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamaketechnology/pi5-setup.git",
    "directory": "tools/admin-panel"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.10.0",
    "chart.js": "^4.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "glob": "^11.0.0",
    "node-cron": "^3.0.3",
    "node-ssh": "^13.2.0",
    "socket.io": "^4.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
